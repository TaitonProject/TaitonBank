<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.taiton.entity.AccountEntity">
        <table name="account" schema="taitonbankdb" catalog=""/>
        <attributes>
            <id name="id">
                <column name="Id" precision="11"/>
            </id>
            <basic name="accountNumber">
                <column name="Account_Number" length="45"/>
            </basic>
            <basic name="accountBalance">
                <column name="Account_Balance" precision="-1"/>
            </basic>
            <basic name="currencyId">
                <column name="Currency_Id" precision="11"/>
            </basic>
            <basic name="organiztaionId">
                <column name="Organiztaion_Id" nullable="false" precision="11"/>
            </basic>
            <basic name="clientId">
                <column name="Client_id" precision="11"/>
            </basic>
            <many-to-one name="currencyByCurrencyId" optional="true" target-entity="com.taiton.entity.CurrencyEntity">
                <join-column name="Currency_Id" referenced-column-name="Id"/>
            </many-to-one>
            <many-to-one name="serviceByOrganiztaionId" optional="true" target-entity="com.taiton.entity.ServiceEntity">
                <join-column name="Organiztaion_Id" nullable="false" referenced-column-name="Id"/>
            </many-to-one>
            <many-to-one name="clientByClientId" optional="true" target-entity="com.taiton.entity.ClientEntity">
                <join-column name="Client_id" referenced-column-name="id"/>
            </many-to-one>
            <one-to-many name="paymentsById" mapped-by="accountByAccountId"
                         target-entity="com.taiton.entity.PaymentEntity"/>
        </attributes>
    </entity>
</entity-mappings>
