<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.taiton.entity.ClientEntity">
        <table name="client" schema="taitonbankdb" catalog=""/>
        <attributes>
            <id name="id">
                <column name="id" precision="11"/>
            </id>
            <basic name="firstName">
                <column name="First_Name" length="45"/>
            </basic>
            <basic name="secondName">
                <column name="Second_Name" length="45"/>
            </basic>
            <basic name="surName">
                <column name="Sur_Name" length="45"/>
            </basic>
            <one-to-many name="accountsById" mapped-by="clientByClientId"
                         target-entity="com.taiton.entity.AccountEntity"/>
            <one-to-many name="clientInfosById" mapped-by="clientByClientId"
                         target-entity="com.taiton.entity.ClientInfoEntity"/>
        </attributes>
    </entity>
</entity-mappings>
